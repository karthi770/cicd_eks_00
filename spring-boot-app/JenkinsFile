pipeline {
  agent  any 

  tools {
    maven "Apache Maven 3.6.3"
  }

  environment {
	registry = "634211996823.dkr.ecr.us-east-1.amazonaws.com/spring-boot"
}

  stages {
        stage('Checkout') {
         steps {
            checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/karthi770/cicd_eks_00.git']])
        }
        }
        
        stage('Static Code Analysis') {
       environment {
         SONAR_URL = "http://3.93.15.7:9000"
      }
       steps {
         withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
           sh 'cd spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
         }
       }
        }

       stage('Build Jar') {
         steps {
          sh "cd spring-boot-app && mvn clean package"
           sh 'ls -ltr'
         }
      }

      stage("Build image"){
        steps{
          script {
            docker.build registry
            dir('/var/lib/jenkins/workspace/CICD_EKS/spring-boot-app/')
          }
        }
      }

